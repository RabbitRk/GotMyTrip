<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RentalPackage.RentalActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Login_page.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/Login_page.PopupOverlay"
                app:title="Rental Booking" />

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:scrollbarStyle="insideOverlay">

            <RelativeLayout
                android:id="@+id/mainl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">


                <LinearLayout
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/bgcolor"
                        app:contentPadding="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/pickuptitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:padding="5dp"
                                    android:text="Pick-up Location"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5pt"
                                    android:background="@color/colorAccent"
                                    android:padding="5dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/rentalpickup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:text="location"
                                android:textColor="@color/text_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:padding="3dp"
                                    android:text="Pick on"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/dateon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:padding="2dp"
                                    android:text="11-03-2019"
                                    android:textColor="@color/text_color"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:padding="3dp"
                                    android:text="Time"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/timeat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="serif"
                                    android:padding="2dp"
                                    android:text="11:30 AM"
                                    android:textColor="@color/text_color"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/changedate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="serif"
                                    android:onClick="timeChange"
                                    android:text="Change"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blank1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_below="@+id/blank1"
                    app:cardBackgroundColor="@color/bgcolor"
                    app:contentPadding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pack1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:padding="5dp"
                            android:text="Select Package"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="0.5pt"
                            android:background="@color/colorAccent"
                            android:padding="5dp" />

                        <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/packdetails"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->
                        <!---->

                        <!--</android.support.v7.widget.RecyclerView>-->
                        <ListView
                            android:id="@+id/packdetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:choiceMode="singleChoice"
                            tools:ignore="NestedScrolling"></ListView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/blank2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/blank2"
                    android:layout_alignParentBottom="true"
                    app:cardBackgroundColor="@color/bgcolor"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="serif"
                                android:padding="5dp"
                                android:text="Fare Details"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="0.5pt"
                                android:background="@color/colorAccent"
                                android:padding="5dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="#c0c0c0"
                                android:padding="10dp" />

                        </LinearLayout>


                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginTop="2dp"-->
                        <!--                            android:layout_marginBottom="2dp"-->
                        <!--                            android:paddingStart="10dp"-->
                        <!--                            android:text="Fare Details and Rules"-->
                        <!--                            android:textColor="@color/text_color"-->
                        <!--                            android:textSize="12sp"-->
                        <!--                            android:textStyle="bold"-->
                        <!--                            tools:ignore="RtlSymmetry" />-->

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="7dp"
                            android:shrinkColumns="*"
                            android:stretchColumns="*">

                            <!--Base fare  -->
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:layout_weight="1"
                                    android:text="Base Fare" />

                                <TextView
                                    android:id="@+id/fare"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="7dp"
                                    android:paddingStart="10dp"
                                    android:layout_weight="1"
                                    android:text="fare"
                                    android:textColor="@color/text_color"
                                    tools:ignore="RtlSymmetry" />

                            </TableRow>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorPrimaryDark" />

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:layout_weight="1"
                                    android:text="Per/Km" />
                                <TextView
                                    android:id="@+id/per_km"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="per km"
                                    android:layout_weight="1"
                                    android:padding="7dp"
                                    android:paddingStart="10dp"
                                    android:textColor="@color/text_color" />
                            </TableRow>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorPrimaryDark" />

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:layout_weight="1"
                                    android:text="Per/Hr" />
                                <TextView
                                    android:id="@+id/per_hr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="per hr"
                                    android:layout_weight="1"
                                    android:padding="7dp"
                                    android:paddingStart="10dp"
                                    android:textColor="@color/text_color" />
                            </TableRow>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/colorPrimaryDark" />
                        </TableLayout>


                        <Button
                            android:id="@+id/booking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="30dp"
                            android:background="@color/colorPrimaryDark"
                            android:onClick="confirmBooking"
                            android:text="Book Now"
                            android:textColor="@color/text_color"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>