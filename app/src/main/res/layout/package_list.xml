<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/p1card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="0dp"
        app:cardBackgroundColor="@color/tranfer_color"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Vehicle Type: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/v_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:hint="Vtype"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Book ID: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Book id"
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Travel Type: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/travel_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:hint="Travel Type"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Date: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/dateof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:hint="Date"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Start from: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/ori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:hint="Start from"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="end"
                android:hint="Finish in: "
                android:foregroundGravity="right"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:paddingStart="20dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/dest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:hint="Finished in"
                android:padding="5dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="13sp" />
        </LinearLayout>
     </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>